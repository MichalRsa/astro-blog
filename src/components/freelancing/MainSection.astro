---
import { Button } from "../../components/Button";
import SectionWrapper from "@components/freelancing/components/SectionWrapper.astro";
import Myself from "@images/profile_pic.png";
import { Image } from "astro:assets";
---

<SectionWrapper bgColor="bg-ternary-200">
  <div class="flex flex-col sm:flex-row sm:gap-8 lg:py-16">
    <div class="relative z-10 sm:w-1/2">
      <h1 class="mb-6 text-2xl lg:mb-16 lg:text-5xl">
        Creating appealing websites
        <br />
        for small business
      </h1>
      <p class="mb-6 text-xl max-md:text-base lg:mb-16 lg:text-2xl">
        I am a software developer with 4 years of experience who will design,
        create, and make your website fast and editable.
      </p>
      <div class="mb-2 lg:mb-16">
        <Button
          href="/contact-me/hire-freelancer"
          withShadow
          text="Contact me"
        />
      </div>
    </div>
    <div class="max-sm:mx-auto max-sm:-mr-24 max-sm:-mt-16 sm:w-1/2">
      <Image
        widths={[300, 624]}
        sizes='(max-width: 640px) 300px, 624px'
        loading="eager"
        src={Myself}
        alt=""
        class="min-w-[300px] max-sm:w-[300px] rounded-3xl sm:w-full"
      />
    </div>
  </div>
</SectionWrapper>
