---
import { Button } from "../../components/Button";
import SectionWrapper from "./components/SectionWrapper.astro";
---

<SectionWrapper bgColor="bg-ternary-200">
  <div
    class="animationHidden animationBottom flex h-[80vh] flex-col justify-center"
  >
    <h2 class="pb-6 text-center">
      <span class="block text-5xl">Like The Idea?</span>
    </h2>
    <p class="pb-12 text-center text-2xl">
      <span class="block">Contact me and tell me about your project</span>
      <span>or check the sample website implementation</span>
    </p>
    <div class="flex justify-center gap-4">
      <Button  href="/contact-me/hire-freelancer" withShadow text="Contact me"/>
      <Button type="secondary" text="See showcase website">
    </div>
  </div>
</SectionWrapper>
