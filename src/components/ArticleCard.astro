---
const { heroImage, slug, title, pubDate, description, imgAlt } = Astro.props;

const absoluteSlug = `/blog/${slug}`;
---

<article>
  <a
    class="flex flex-col transition-shadow duration-150 ease-in-out shadow-sm hover:shadow-md rounded-2xl"
    href={absoluteSlug}
  >
    <div class="sm:h-64 h-44">
      <div class="w-full h-full overflow-hidden rounded-2xl">
        <img
          class="min-w-full min-h-full object-cover"
          src={heroImage}
          alt={imgAlt}
        />
      </div>
    </div>

    <div
      class="p-4 flex flex-col justify-start xxlmin:w-1/2 xxlmax:w-full md:h-64 h-auto"
    >
      <p class="text-xs font-thin pb-4">{pubDate}</p>
      <h2 class="text-lg font-bold pb-8">{title}</h2>
      <p class="test-base font-light pb-8">{description}</p>
    </div>
  </a>
</article>
